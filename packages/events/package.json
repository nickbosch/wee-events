{
  "name": "@weegigs/events-core",
  "version": "0.15.0",
  "description": "Core Event System",
  "author": "Kevin O'Neill <kevin@weegigs.com.au>",
  "license": "ISC",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "packageManager": "yarn@3.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/weegigs/wee-events.git"
  },
  "scripts": {
    "build": "yarn ws:build",
    "clean": "yarn ws:clean",
    "compile": "yarn ws:compile",
    "test": "yarn ws:test",
    "lint": "yarn ws:lint",
    "doctor": "yarn ws:doctor",
    "fix": "yarn run ws:fix"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "luxon": "^2.3.1",
    "nanoid": "^3.3.1",
    "ulid": "^2.3.0",
    "zod": "^3.13.4"
  },
  "peerDependencies": {
    "@effect-ts/core": "^0.58.0"
  },
  "devDependencies": {
    "@effect-ts/core": "^0.58.0",
    "@tsconfig/node14": "^1.0.1",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.179",
    "@types/luxon": "^2.3.0",
    "@types/node": "^14.18.12",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/*.spec.ts",
      "**/*.test.ts"
    ],
    "collectCoverage": false,
    "coverageReporters": [
      "html"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
